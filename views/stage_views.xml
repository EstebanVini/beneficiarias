<odoo>
    <record id="view_beneficiarias_stage_form" model="ir.ui.view">
        <field name="name">beneficiarias.stage.form</field>
        <field name="model">beneficiarias.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="fold"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beneficiarias_stage_tree" model="ir.ui.view">
        <field name="name">beneficiarias.stage.tree</field>
        <field name="model">beneficiarias.stage</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="sequence"/>
                <field name="fold"/>
            </tree>
        </field>
    </record>

    <record id="action_beneficiarias_stages" model="ir.actions.act_window">
        <field name="name">Etapas</field>
        <field name="res_model">beneficiarias.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_beneficiarias_stages"
              name="Etapas de Seguimiento"
              parent="menu_beneficiarias_root"
              sequence="20"
              action="action_beneficiarias_stages"/>
</odoo>
